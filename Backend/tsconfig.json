{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "types": ["node", "jest"]
  },
  "include": ["*.ts", "jest.config.js"],
  "exclude": ["node_modules", "dist"]
}